{
  "name": "flowmarket-front-end",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "yarn db:generate && next dev",
    "build": "yarn db:generate && next build",
    "start": "next start",
    "vercel-install": "yarn && yarn submodule",
    "prepare": "husky install",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx ./components ./pages ./services ./utils",
    "pre-commit": "lint-staged",
    "submodule": "git submodule update --force --recursive --init --remote && git submodule update --remote --merge",
    "query:gen": "bash ./scripts/query-gen.sh",
    "update:api": "yarn && yarn query:gen"
  },
  "dependencies": {
    "@ant-design/icons": "^4.7.0",
    "@white-matrix/request-client-generator": "^1.2.0",
    "axios": "^0.26.1",
    "baseui": "10.10.0",
    "classnames": "^2.3.1",
    "copy-to-clipboard": "^3.3.1",
    "eventemitter3": "^4.0.7",
    "lodash": "^4.17.21",
    "next": "12.1.0",
    "next-i18next": "^10.5.0",
    "next-seo": "^5.1.0",
    "next-themes": "^0.1.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-infinite-scroller": "^1.2.6",
    "react-modern-drawer": "^1.0.2",
    "react-query": "^3.34.19",
    "react-use": "^17.3.2",
    "remove": "^0.1.5",
    "store2": "^2.13.2",
    "styletron-engine-atomic": "^1.4.8",
    "styletron-react": "^6.0.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@tailwindcss/line-clamp": "^0.3.1",
    "@types/lodash": "^4.14.180",
    "@types/node": "17.0.21",
    "@types/react": "17.0.40",
    "@types/react-infinite-scroller": "^1.2.3",
    "@types/styletron-engine-atomic": "^1.1.1",
    "@types/styletron-react": "^5.0.3",
    "@types/uuid": "^8.3.4",
    "@white-matrix/eslint-config": "1.1.1",
    "@white-matrix/prettier-config": "1.1.1",
    "add": "^2.0.6",
    "autoprefixer": "^10.4.4",
    "eslint-loader": "4.0.2",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^7.0.4",
    "lint-staged": "12.1.3",
    "postcss": "^8.4.12",
    "postcss-sass": "^0.5.0",
    "postcss-scss": "^4.0.3",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "prisma": "^3.13.0",
    "sass": "^1.49.9",
    "stylelint": "14.2.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-prettier": "^2.0.0",
    "tailwindcss": "^3.0.23",
    "typescript": "4.6.2",
    "yarn": "^1.22.18"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "lint-staged": {
    "**/*.{less,css,sass,scss}": "stylelint --fix",
    "**/*.{js,jsx,ts,tsx}": [
      "yarn lint --fix"
    ]
  },
  "resolutions": {
    "@types/react": "17.0.40"
  },
  "engines": {
    "node": ">=10.4.0"
  }
}
